#!/bin/sh
#
# Copyright (C) 2017 OpenWrt.org
#

. /lib/functions/uci-defaults.sh
. /lib/mvebu.sh

board_config_update

board=$(mvebu_board_name)

case "$board" in
armada-a8k-8040-db)
	ucidef_set_interfaces_lan_wan "eth3" "eth1"
	;;
*)
	ucidef_set_interface_lan "eth0"
	;;
esac

board_config_flush

exit 0
